name: Manual Deployment to Azure Web App (Prod)

on:
  workflow_dispatch:

push:
    branches:
      - prod  # Trigger on pushes to prod branch 

jobs:
  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: 'Production'
      url: ${{ steps.deploy-to-webapp.outputs.webapp-url }}
    permissions:
      id-token: write #This is required for requesting the JWT

    steps:
      - name: Download artifact from build job
        uses: actions/download-artifact@v4
        with:
          name: python-app

      - name: Unzip artifact for deployment
        run: unzip release.zip

      
      - name: Login to Azure
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZUREAPPSERVICE_CLIENTID_AD125C2EB4AA455E9D39FB08C4EFE48F }}
          tenant-id: ${{ secrets.AZUREAPPSERVICE_TENANTID_6C87A4212AF348F6BDFE91F3B0F86D90 }}
          subscription-id: ${{ secrets.AZUREAPPSERVICE_SUBSCRIPTIONID_6A629CCEE37E40F9B2F4069A8787990C }}

      - name: 'Deploy to Azure Web App'
        uses: azure/webapps-deploy@v3
        id: deploy-to-webapp
        with:
          app-name: 'dev-DTest'
          slot-name: 'Production'
